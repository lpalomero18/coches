doctype html
html(lang='es' ng-app="buscaCochesApp")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='../bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='../bower_components/bootstrap-select/dist/css/bootstrap-select.min.css')
    script(src='./bower_components/jquery/dist/jquery.min.js')
    script(src="./bower_components/bootstrap-select/dist/js/bootstrap-select.min.js")
    script(src='./bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='./bower_components/bacon/dist/Bacon.min.js')
    script(src='../bower_components/angular/angular.min.js')
    script(src='./bower_components/angular-bacon/dist/angular-bacon.min.js')
  body
    block content
div.container
    header.row
        h1= title
    div.row.content(ng-controller="CochesController")
      aside#busqueda.col-sm-4
        include ./includes/busqueda.pug
      div.row.row-content
        table(data-role='listview').table-striped.table-bordered.table-hover.table-condensed
          tbody
                tr.coches.clickable-row(ng-repeat="coche in coches")
                        td.
                          {{coche.marca}}
                        td.
                          {{coche.modelo}}
                        td.
                          {{coche.precio}}
                        td.
                          {{coche.ciudad}}
                        td.
                          {{coche.combustible}}
                        td.
                          {{coche.kilometros}}
                        td.
                          {{coche.videPorDelante}}
                        td.
                            {{coche.costeAnual}}
    footer.row (c) copirrait cacafuti enterpries 1991
script.
 jQuery(document).ready(function($) {
    $(".clickable-row").click(function() {
        window.open ($(this).data("href"),'_blank');
    });
 });
